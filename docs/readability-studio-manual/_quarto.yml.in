project:
  type: book
  output-dir: "docs-QUARTO"
toc: true
toc-depth: 2
links-as-notes: true
linestretch: 1.15
biblio-title: References
bibliography: cites.bib
biblio-style: mla
biblatexoptions: maxbibnames=4
link-citations: true
nocite: '@*'
csl: modern-language-association.csl
pdf-cover: "images/non-generated/cover.pdf"
number-sections: true
crossref:
  chapters: true
book:
  title: "${readstudio_DESCRIPTION} ${FULL_DISPLAY_VERSION}"
  subtitle: User Manual
  author: ${PROGRAM_AUTHOR}
  date: today
  date-format: long
  output-file: "readability-studio-manual"
  language: en
  search: false
  cover-image: "images/non-generated/cover.png"
  image: "images/non-generated/cover.png"
  chapters:
    - index.qmd
    - part: "Overviews"
      chapters:
      - 01-Overviews.Rmd
    - part: "Projects & Features"
      chapters:
      - 10-CreatingANewProject.Rmd
      - 11-ReviewingStandardProjects.rmd
      - 12-ReviewingBatchProject.rmd
      - 13-CustomizingResults.rmd
      - 14-Publishing.rmd
      - 15-ProgramOptions.rmd
      - 16-AdditionalFeatures.rmd
    - part: "Readability Tests"
      chapters:
      - 20-ReadabilityTestsEnglish.rmd
      - 21-ReadabilityTestsSpanish.rmd
      - 22-ReadabilityTestsGerman.rmd
      - 24-CustomTestAndBundles.rmd
    - part: "Examples"
      chapters:
      - 30-ExamplesGettingStarted.rmd
      - 31-ExamplesAdvanced.rmd
      - 32-ExamplesEditing.Rmd
      - 33-ExamplesGraphs.rmd
      - 34-ExamplesBatchProjects.rmd
      - 35-ExamplesCreatingCustomTests.rmd
    - part: "Notes"
      chapters:
      - 40-AnalysisNotes.rmd
      - 41-ScoringNotes.rmd
    - part: "Appendix"
      chapters:
      - 90-Acknowledgements.Rmd
      - 93-Author.rmd
      - 94-References.rmd
      - appendix.qmd
format:
  pdf:
    documentclass: book
    template: latex/default.tex
    include-in-header: latex/preamble.tex
    latex-engine: xelatex
    keep-tex: true
    citation-package: biblatex
    cite-method: biblatex
    lot: true
    lof: true
    code-block-bg: false
  html:
    theme: cosmo
    html-math-method: katex
    css: css/style.css
    smooth-scroll: true
